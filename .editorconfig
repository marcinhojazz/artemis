# EditorConfig for Artemis Project
# https://editorconfig.org

root = true

# ---------------------------------
# Default configuration for all files
# ---------------------------------
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# ---------------------------------
# Astro files
# ---------------------------------
[*.astro]
indent_size = 2
indent_style = space

# ---------------------------------
# JavaScript / TypeScript
# (includes .jsx, .tsx)
# ---------------------------------
[*.{js,jsx,ts,tsx}]
indent_size = 2
indent_style = space
charset = utf-8
insert_final_newline = true

# ---------------------------------
# Svelte files
# (Svelte v5+ syntax support)
# ---------------------------------
[*.svelte]
indent_size = 2
indent_style = space
charset = utf-8
insert_final_newline = true

# ---------------------------------
# JSON, YAML, Configs
# ---------------------------------
[*.{json,yml,yaml}]
indent_size = 2
indent_style = space
insert_final_newline = true

# ---------------------------------
# CSS / SCSS / PostCSS / Tailwind
# ---------------------------------
[*.{css,scss,pcss}]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# ---------------------------------
# Markdown – preserve intentional spaces
# ---------------------------------
[*.md]
trim_trailing_whitespace = false
indent_size = 2
indent_style = space

# ---------------------------------
# Python – if used for scripts
# ---------------------------------
[*.py]
indent_size = 4
indent_style = space
charset = utf-8
insert_final_newline = true

# ---------------------------------
# Makefile – tabs are required
# ---------------------------------
[Makefile]
indent_style = tab

# ---------------------------------
# Special cases
# ---------------------------------
[{package.json,tsconfig.json,astro.config.*}]
indent_size = 2
indent_style = space
insert_final_newline = true
